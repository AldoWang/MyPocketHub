<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem">

    <RadioButton
        android:id="@+id/rb_selected"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:clickable="false"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:paddingEnd="10dp"
        android:paddingRight="10dp"/>

    <com.hdsx.mypockethub.ui.view.OcticonTextView
        android:id="@+id/tv_ref_icon"
        style="@style/PrimaryIcon"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/rb_selected"
        android:layout_toRightOf="@id/rb_selected"
        android:text="@string/icon_fork"/>

    <TextView
        android:id="@+id/tv_ref"
        style="@style/ListTitleText"
        android:layout_width="match_parent"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_ref_icon"
        android:layout_toRightOf="@id/tv_ref_icon"
        android:paddingBottom="0dp"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"/>

</RelativeLayout>