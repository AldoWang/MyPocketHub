<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/ListItem"
    android:layout_width="match_parent"
    android:layout_alignParentBottom="true"
    android:layout_alignParentLeft="true"
    android:layout_alignParentStart="true"
    android:background="@drawable/footer_selector"
    android:paddingBottom="8dp"
    android:paddingTop="8dp"
    android:visibility="gone">

    <com.hdsx.mypockethub.ui.view.OcticonTextView
        android:id="@+id/tv_branch_icon"
        style="@style/PrimaryIcon"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:text="@string/icon_fork"
        android:textColor="@color/actionbar_text"/>

    <TextView
        android:id="@+id/tv_branch"
        style="@style/HeaderTitleText"
        android:layout_centerVertical="true"
        android:layout_toEndOf="@id/tv_branch_icon"
        android:layout_toRightOf="@id/tv_branch_icon"
        android:paddingBottom="0dp"
        android:textColor="@color/actionbar_text"
        android:textSize="15sp"/>

</RelativeLayout>